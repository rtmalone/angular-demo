doctype html
html(ng-app='demo')
  head
    title Angular Demo
    link(rel='stylesheet', href='/index.css')
  body(ng-controller='MainController')
    h1 Angular Demo
    input(type='text', ng-model='name', ng-minlength='4', ng-maxlength='20', ng-pattern='/groot/',required)
    h2 I AM {{name}}
    h3 My age is {{age}}
    input(type='checkbox', ng-model='isBirthday')
    h4 Is is my Birthday: {{isBirthday}}
    h1(ng-show='isBirthday') Happy Birthday {{name}}
    ul
      li(ng-repeat='dog in dogs') {{dog.name}} is {{dog.age}} years old.

    pre(ng-hide='isBirthday') {{dogs | json}}

    script(src='/vendor/angular/angular.js')
    script(src='/index.js')
